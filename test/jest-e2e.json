{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
   "moduleNameMapper": {
    "^@posts/(.*)$": "<rootDir>/src/posts/$1",
    "^@users/(.*)$": "<rootDir>/src/users/$1"
  }
}
